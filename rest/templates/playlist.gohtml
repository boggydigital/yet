{{define "playlist"}}
    <li class="playlist-container">
        <a class="playlist" href='/playlist?list={{.PlaylistId}}'>
            <span class='title'>{{.PlaylistChannelTitle}}</span>
            <span class='subtitle'>{{.PlaylistTitle}}</span>
            {{if gt .BadgeCount 0}}
                <span class='new_videos'>{{.BadgeCount}}</span>
            {{end}}
        </a>
    </li>
{{end}}